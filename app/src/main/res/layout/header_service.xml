<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingBottom="10dp">
    <!--发现首页 头布局-->


    <include
        android:id="@+id/include_banner"
        layout="@layout/include_banner"
        android:layout_width="match_parent"
        android:layout_height="151dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view1"
        android:layout_width="0.1dp"
        android:layout_height="60dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/include_banner" />

    <View
        android:id="@+id/view2"
        android:layout_width="0.1dp"
        android:layout_height="60dp"
        app:layout_constraintEnd_toStartOf="@+id/view1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/include_banner" />


    <View
        android:id="@+id/view3"
        android:layout_width="0.1dp"
        android:layout_height="60dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/view1"
        app:layout_constraintTop_toBottomOf="@+id/include_banner" />


    <ImageView
        android:id="@+id/iv_talent"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="12dp"
        android:src="@drawable/ic_service1"
        app:layout_constraintEnd_toStartOf="@+id/view2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/include_banner" />


    <ImageView
        android:id="@+id/iv_dynamic"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="12dp"
        android:src="@drawable/ic_service2"
        app:layout_constraintEnd_toStartOf="@+id/view1"
        app:layout_constraintStart_toEndOf="@+id/view2"
        app:layout_constraintTop_toBottomOf="@+id/include_banner" />

    <ImageView
        android:id="@+id/iv_activity"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="12dp"
        android:src="@drawable/ic_service3"
        app:layout_constraintEnd_toStartOf="@+id/view3"
        app:layout_constraintStart_toEndOf="@+id/view1"
        app:layout_constraintTop_toBottomOf="@+id/include_banner" />


    <ImageView
        android:id="@+id/iv_help"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="12dp"
        android:src="@drawable/ic_service4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/view3"
        app:layout_constraintTop_toBottomOf="@+id/include_banner" />


    <TextView
        android:id="@+id/tv_talent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="新鲜果蔬"
        android:textColor="@color/colorTabText"
        android:textSize="@dimen/sub_fant"
        app:layout_constraintEnd_toEndOf="@+id/iv_talent"
        app:layout_constraintStart_toStartOf="@+id/iv_talent"
        app:layout_constraintTop_toBottomOf="@+id/iv_talent" />

    <TextView
        android:id="@+id/tv_dynamic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="洗衣洗鞋"
        android:textColor="@color/colorTabText"
        android:textSize="@dimen/sub_fant"
        app:layout_constraintEnd_toEndOf="@+id/iv_dynamic"
        app:layout_constraintStart_toStartOf="@+id/iv_dynamic"
        app:layout_constraintTop_toBottomOf="@+id/iv_talent" />

    <TextView
        android:id="@+id/tv_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="超市便利"
        android:textColor="@color/colorTabText"
        android:textSize="@dimen/sub_fant"
        app:layout_constraintEnd_toEndOf="@+id/iv_activity"
        app:layout_constraintStart_toStartOf="@+id/iv_activity"
        app:layout_constraintTop_toBottomOf="@+id/iv_talent" />

    <TextView
        android:id="@+id/tv_help"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="小区店铺"
        android:textColor="@color/colorTabText"
        android:textSize="@dimen/sub_fant"
        app:layout_constraintEnd_toEndOf="@+id/iv_help"
        app:layout_constraintStart_toStartOf="@+id/iv_help"
        app:layout_constraintTop_toBottomOf="@+id/iv_talent" />


    <View
        android:id="@+id/view_line"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:layout_marginTop="20dp"
        android:background="#F0F0F0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_activity" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="12dp"
        android:text="逗邻精选"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_line" />

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/sdv_second"
        android:layout_width="111dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView8"
        app:viewAspectRatio="0.496" />

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/sdv_total_buy"
        android:layout_width="222dp"
        android:layout_height="111dp"
        android:layout_marginStart="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginEnd="12dp"
        android:layout_marginRight="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/sdv_second"
        app:layout_constraintTop_toTopOf="@+id/sdv_second"
        app:viewAspectRatio="2" />

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/sdv_best"
        android:layout_width="110.5dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        app:layout_constraintBottom_toBottomOf="@+id/sdv_second"
        app:layout_constraintStart_toStartOf="@+id/sdv_total_buy"
        app:layout_constraintTop_toBottomOf="@+id/sdv_total_buy"
        app:viewAspectRatio="1" />

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/sdv_market"
        android:layout_width="110.5dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginLeft="2dp"
        app:layout_constraintBottom_toBottomOf="@+id/sdv_best"
        app:layout_constraintEnd_toEndOf="@+id/sdv_total_buy"
        app:layout_constraintStart_toEndOf="@+id/sdv_best"
        app:layout_constraintTop_toTopOf="@+id/sdv_best"
        app:viewAspectRatio="1" />

</android.support.constraint.ConstraintLayout>