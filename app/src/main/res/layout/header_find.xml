<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">
    <!--发现首页 头布局-->

    <!--
       app:indicator_drawable_selected="@drawable/ic_indicator_hl"
        app:indicator_drawable_unselected="@drawable/ic_indicator_nor"
    -->
    <include
        android:id="@+id/include_banner"
        layout="@layout/include_banner"
        android:layout_width="match_parent"
        android:layout_height="155dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <View
        android:id="@+id/view1"
        android:layout_width="0.1dp"
        android:layout_height="60dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/include_banner" />

    <View
        android:id="@+id/view2"
        android:layout_width="0.1dp"
        android:layout_height="60dp"
        app:layout_constraintEnd_toStartOf="@+id/view1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/include_banner" />


    <View
        android:id="@+id/view3"
        android:layout_width="0.1dp"
        android:layout_height="60dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/view1"
        app:layout_constraintTop_toBottomOf="@+id/include_banner" />


    <ImageView
        android:id="@+id/iv_talent"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="12dp"
        android:src="@drawable/ic_talent"
        app:layout_constraintEnd_toStartOf="@+id/view2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/include_banner" />


    <ImageView
        android:id="@+id/iv_dynamic"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="12dp"
        android:src="@drawable/ic_dynamic"
        app:layout_constraintEnd_toStartOf="@+id/view1"
        app:layout_constraintStart_toEndOf="@+id/view2"
        app:layout_constraintTop_toBottomOf="@+id/include_banner" />

    <ImageView
        android:id="@+id/iv_activity"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="12dp"
        android:src="@drawable/ic_activity"
        app:layout_constraintEnd_toStartOf="@+id/view3"
        app:layout_constraintStart_toEndOf="@+id/view1"
        app:layout_constraintTop_toBottomOf="@+id/include_banner" />


    <ImageView
        android:id="@+id/iv_help"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="12dp"
        android:src="@drawable/ic_help"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/view3"
        app:layout_constraintTop_toBottomOf="@+id/include_banner" />


    <TextView
        android:id="@+id/tv_talent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="达人"
        android:textColor="@color/colorTabText"
        android:textSize="@dimen/sub_fant"
        app:layout_constraintEnd_toEndOf="@+id/iv_talent"
        app:layout_constraintStart_toStartOf="@+id/iv_talent"
        app:layout_constraintTop_toBottomOf="@+id/iv_talent" />

    <TextView
        android:id="@+id/tv_dynamic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="动态"
        android:textColor="@color/colorTabText"
        android:textSize="@dimen/sub_fant"
        app:layout_constraintEnd_toEndOf="@+id/iv_dynamic"
        app:layout_constraintStart_toStartOf="@+id/iv_dynamic"
        app:layout_constraintTop_toBottomOf="@+id/iv_talent" />

    <TextView
        android:id="@+id/tv_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="活动"
        android:textColor="@color/colorTabText"
        android:textSize="@dimen/sub_fant"
        app:layout_constraintEnd_toEndOf="@+id/iv_activity"
        app:layout_constraintStart_toStartOf="@+id/iv_activity"
        app:layout_constraintTop_toBottomOf="@+id/iv_talent" />

    <TextView
        android:id="@+id/tv_help"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="帮帮"
        android:textColor="@color/colorTabText"
        android:textSize="@dimen/sub_fant"
        app:layout_constraintEnd_toEndOf="@+id/iv_help"
        app:layout_constraintStart_toStartOf="@+id/iv_help"
        app:layout_constraintTop_toBottomOf="@+id/iv_talent" />

    <View
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_marginTop="20dp"
        android:background="@color/gray2"
        app:layout_constraintTop_toBottomOf="@+id/tv_help" />


    <ImageView
        android:id="@+id/rank"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/ic_rank"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/line1" />

    <View
        android:id="@+id/line2"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_marginTop="10dp"
        android:background="@color/gray2"
        app:layout_constraintTop_toBottomOf="@+id/rank" />

    <View
        android:id="@+id/redman"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/jingxuna"
        app:layout_constraintTop_toBottomOf="@+id/line1" />

    <TextView
        android:id="@+id/tv_rank"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="红人榜"
        android:textColor="@color/black"
        android:textSize="@dimen/main_fant"
        app:layout_constraintBottom_toBottomOf="@+id/rank"
        app:layout_constraintStart_toEndOf="@+id/rank"
        app:layout_constraintTop_toTopOf="@+id/rank" />

    <ImageView
        android:id="@+id/iv_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:src="@drawable/ic_right"
        app:layout_constraintBottom_toBottomOf="@+id/rank"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/rank" />

    <com.lixin.amuseadjacent.app.view.CircleImageView
        android:id="@+id/header3"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginRight="44dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_header"
        app:layout_constraintBottom_toBottomOf="@+id/iv_right"
        app:layout_constraintEnd_toStartOf="@+id/iv_right"
        app:layout_constraintTop_toTopOf="@+id/iv_right" />

    <com.lixin.amuseadjacent.app.view.CircleImageView
        android:id="@+id/header2"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginRight="22dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_header"
        app:layout_constraintBottom_toBottomOf="@+id/iv_right"
        app:layout_constraintEnd_toStartOf="@+id/iv_right"
        app:layout_constraintTop_toTopOf="@+id/iv_right" />

    <com.lixin.amuseadjacent.app.view.CircleImageView
        android:id="@+id/header1"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_header"
        app:layout_constraintBottom_toBottomOf="@+id/iv_right"
        app:layout_constraintEnd_toStartOf="@+id/iv_right"
        app:layout_constraintTop_toTopOf="@+id/iv_right" />


    <TextView
        android:id="@+id/jingxuna"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="12dp"
        android:text="- 逗邻精选 -"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/main_fant"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/line2" />

    <TextView
        android:id="@+id/tv_participate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:text=""
        android:textColor="@color/colorTheme"
        android:textSize="@dimen/main_fant"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/jingxuna" />

    <ImageView
        android:id="@+id/iv_topic"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_margin="12dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/logo"
        app:layout_constraintTop_toBottomOf="@+id/tv_participate" />

    <TextView
        android:id="@+id/tv_topiccomment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/webview"
        android:layout_marginRight="8dp"
        android:drawableLeft="@drawable/ic_comment2"
        android:drawablePadding="5dp"
        android:paddingLeft="10dp"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:text=""
        app:layout_constraintTop_toBottomOf="@+id/iv_topic"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tv_topiczan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/webview"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_toLeftOf="@+id/tv_comment"
        android:drawableLeft="@drawable/ic_zan"
        android:drawablePadding="5dp"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp"
        android:text=""
        app:layout_constraintEnd_toStartOf="@+id/tv_topiccomment"
        app:layout_constraintTop_toBottomOf="@+id/iv_topic" />


</android.support.constraint.ConstraintLayout>