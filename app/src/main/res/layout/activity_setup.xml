<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--设置-->

    <include
        android:id="@+id/include9"
        layout="@layout/include_basetop" />

    <View
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/gray2"
        app:layout_constraintTop_toBottomOf="@+id/include9" />

    <TextView
        android:id="@+id/message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="12dp"
        android:text="消息提醒"
        android:textColor="@color/black"
        android:textSize="@dimen/main_fant"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/line1" />

    <com.lixin.amuseadjacent.app.view.SwitchView
        android:id="@+id/sv_message"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        app:layout_constraintBottom_toTopOf="@+id/message"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginRight="4dp"
        app:layout_constraintTop_toBottomOf="@+id/message" />

    <include
        android:id="@+id/line2"
        layout="@layout/include_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@+id/message" />


    <TextView
        android:id="@+id/shield"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/touch_bg"
        android:drawableRight="@drawable/ic_right"
        android:padding="12dp"
        android:text="我的屏蔽"
        android:textColor="@color/black"
        android:textSize="@dimen/main_fant"
        app:layout_constraintTop_toBottomOf="@+id/line2" />

    <include
        android:id="@+id/line3_1"
        layout="@layout/include_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@+id/shield" />

    <TextView
        android:id="@+id/change_pass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/touch_bg"
        android:drawableRight="@drawable/ic_right"
        android:padding="12dp"
        android:text="更改密码"
        android:textColor="@color/black"
        android:textSize="@dimen/main_fant"
        app:layout_constraintTop_toBottomOf="@+id/line3_1" />

    <include
        android:id="@+id/line3"
        layout="@layout/include_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@+id/change_pass" />

    <TextView
        android:id="@+id/tv_eliminate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/touch_bg"
        android:gravity="right"
        android:padding="12dp"
        android:text="0.0MB"
        android:textColor="@color/black"
        android:textSize="@dimen/main_fant"
        app:layout_constraintTop_toBottomOf="@+id/line3" />

    <TextView
        android:id="@+id/Eliminate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:text="清除缓存"
        android:textColor="@color/black"
        android:textSize="@dimen/main_fant"
        app:layout_constraintTop_toBottomOf="@+id/line3" />

    <include
        android:id="@+id/line4"
        layout="@layout/include_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_eliminate" />

    <TextView
        android:id="@+id/tv_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/touch_bg"
        android:drawableRight="@drawable/ic_right"
        android:padding="12dp"
        android:text="收货地址"
        android:textColor="@color/black"
        android:textSize="@dimen/main_fant"
        app:layout_constraintTop_toBottomOf="@+id/line4" />

    <include
        android:id="@+id/line5"
        layout="@layout/include_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_address" />

    <TextView
        android:id="@+id/tv_updata"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:background="@drawable/touch_bg"
        android:text="版本更新"
        android:textColor="@color/black"
        android:textSize="@dimen/main_fant"
        app:layout_constraintTop_toBottomOf="@+id/line5" />

    <View
        android:id="@+id/view_updata"
        android:layout_width="8dp"
        android:layout_height="8dp"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="12dp"
        android:visibility="gone"
        android:background="@drawable/circular_them"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/line5" />


    <TextView
        android:id="@+id/tv_exitlogon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/touch_bg"
        android:padding="12dp"
        android:text="退出登录"
        android:gravity="center"
        android:textColor="@color/colorTabText"
        android:textSize="@dimen/main_fant"
        app:layout_constraintBottom_toBottomOf="parent" />

</android.support.constraint.ConstraintLayout>