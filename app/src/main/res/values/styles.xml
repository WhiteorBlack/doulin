<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorTheme</item>//沉浸式状态栏颜色
        <item name="colorPrimaryDark">@color/colorTheme</item>
        <item name="colorAccent">@color/colorTheme</item>//控件选中后颜色，progress、EditText输入线等
    </style>


    <style name="Dialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:background">#00000000</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <!--<item name="android:backgroundDimEnabled">false</item> 背景不变暗-->
    </style>

    <!--tabLayout字体-->
    <style name="TabLayoutTextStyle">
        <item name="android:textSize">15sp</item>
    </style>

    <!--底部导航RadioGroup-->
    <style name="main_bottom_tab_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:drawablePadding">3dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:textColor">@color/text_bg</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="PopupAnimation">
        <item name="android:windowEnterAnimation">@anim/fade_in</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
    </style>

    <style name="dialogAnim">
        <item name="android:windowEnterAnimation">@anim/fade_in2</item>
        <item name="android:windowExitAnimation">@anim/fade_out2</item>
    </style>


